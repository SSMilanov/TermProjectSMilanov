    <test name="ProductSuite">
        <classes>
            <class name="testingPOM.ProductAddTest"/>
        </classes>
        <classes>
            <class name="testingPOM.SortProdTest"/>
        </classes>
    </test>

    <test name="CheckoutSuite">
        <classes>
            <class name="testingPOM.CheckoutTest"/>
        </classes>
    </test>


</suite>